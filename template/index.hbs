                <div class="mb-3">
                  <label for="name" class="form-label">Familiya <span class="text-primary">*</span></label>
                  <input 
                    type="text" 
                    class="form-control" 
                    name="lastName" 
                    id="lastName" 
                    required>
                </div>
    
                <div class="mb-3">
                  <label for="lastName" class="form-label">Ism <span class="text-primary">*</span></label>
                  <input 
                    type="text" 
                    class="form-control" 
                    name="firstName" 
                    id="firstName" 
                    required>
                </div>

                <div class="mb-3">
                  <label for="year" class="form-label">Tug'ilgan sanasi <span class="text-primary">*</span></label>
                  <input 
                    type="date" 
                    class="form-control" 
                    name="year"
                    id="year" 
                    max="2007-12-31" 
                    required>
                </div>
    
                <div class="mb-3">
                  <label for="number" class="form-label">Telefon Raqam <span class="text-primary">*</span></label>
                  <div class="input-group">
                    <span class="input-group-text">+998</span>
                    <input 
                        type="tel" 
                        inputmode="numeric" 
                        class="form-control" 
                        name="number" 
                        id="number" 
                        placeholder="__-___-__-__" 
                        minlength="9" 
                        maxlength="9" 
                        pattern="[0-9]{2}[0-9]{3}[0-9]{2}[0-9]{2}" 
                        required>
                  </div>
                </div>
                
                <div class="mb-3">
                  <label for="passport" class="form-label">Passport seriasi <span>*</span></label>
                  <input 
                    type="text" 
                    class="form-control" 
                    name="passport" 
                    id="passport" 
                    pattern="^[A-Z]{2}[0-9]{7}$" 
                    maxlength="9" 
                    placeholder="AB1234567" 
                    required>
                </div>
              </div>
  
              <div class="col-md-6 col-lg-5">
                <h3 class="h3 mb-3 mt-3 text-primary">
                  <i class="fa-solid fa-file"></i>
